<Application x:Class="TruckScale.Pos.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <md:BundledTheme BaseTheme="Light"
                 PrimaryColor="BlueGrey"
                 SecondaryColor="Teal"/>
                <ResourceDictionary Source="Resources/Strings.en.xaml"/>

                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign3.Defaults.xaml"/>

                <!-- Tus themes -->
                <ResourceDictionary Source="/Theme/Colors.xaml"/>
                <ResourceDictionary Source="/Theme/Typography.xaml"/>
                <ResourceDictionary Source="/Theme/Components.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
