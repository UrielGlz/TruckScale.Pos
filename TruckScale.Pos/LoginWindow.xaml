<Window x:Class="TruckScale.Pos.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="TruckScale POS - Login"
        Height="520"
        Width="900"
        MinHeight="480"
        MinWidth="820"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        PreviewKeyDown="Window_PreviewKeyDown"
        Background="{DynamicResource MaterialDesignPaper}"
        Loaded="LoginWindow_Loaded">

    <Grid Margin="32">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!-- IZQUIERDA: Branding -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0"
                        VerticalAlignment="Center"
                        Margin="0 0 24 0">

                <!-- LOGO -->
                <Border Width="150" Height="150" CornerRadius="12" Margin="0 0 0 24" Background="#E0E0E0" Padding="12">
                                <Image Source="Resources/logo.jpeg" Stretch="Uniform" SnapsToDevicePixels="True" />
                </Border>



                <!-- Título principal -->
                <TextBlock Text="TruckScale POS"
                           FontSize="40"
                           FontWeight="Bold"
                           Margin="0 0 4 4" />
                <TextBlock Text="Weighbridge System"
                           FontSize="18"
                           Foreground="{DynamicResource MaterialDesignBodySecondary}"
                           Margin="0 0 0 16" />

                <Border Height="4"
                        Width="120"
                        CornerRadius="2"
                        Background="{DynamicResource PrimaryHueMidBrush}"
                        Margin="0 0 0 16" />

                <!-- Descripción corta -->
                <!--<TextBlock Text="Capture axle weights, register drivers and issue tickets from a single, focused screen."
                           FontSize="13"
                           TextWrapping="Wrap"
                           Foreground="{DynamicResource MaterialDesignBodySecondary}"
                           MaxWidth="320"
                           Margin="0 0 0 24" />-->

                <!-- Nombre del sitio / planta -->
                <Border BorderThickness="1"
                        BorderBrush="{DynamicResource MaterialDesignDivider}"
                        Padding="12"
                        Margin="0 0 0 0">
                    <TextBlock Text="McAllen Foreign Trade Zone"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="Red"
                               TextWrapping="Wrap" />
                </Border>
            </StackPanel>

            <!-- Mensaje de configuración de BD (oculto normalmente) -->
            <!--<TextBlock x:Name="ConfigHintText"
                       Grid.Row="1"
                       Margin="0 16 0 0"
                       FontSize="12"
                       Foreground="{DynamicResource MaterialDesignBodySecondary}"
                       Visibility="Collapsed">
                Database not configured. Press CTRL + ALT + F8 for configuration.
            </TextBlock>-->
        </Grid>

        <!-- DERECHA: Tarjeta de login -->
        <Grid Grid.Column="1">
            <Grid VerticalAlignment="Center">
                <Border Background="{DynamicResource MaterialDesignCardBackground}"
                        CornerRadius="20"
                        Padding="32"
                        SnapsToDevicePixels="True">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="16" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!-- Título -->
                        <StackPanel Grid.Row="0" Margin="0 0 0 8">
                            <TextBlock Text="Sign in"
                                       FontSize="26"
                                       FontWeight="SemiBold" />
                            <!-- Se elimina la leyenda de credenciales para que no aparezca -->
                            <!--<TextBlock Text="Use your TruckScale POS credentials"
                                       FontSize="13"
                                       Foreground="{DynamicResource MaterialDesignBodySecondary}" />-->
                        </StackPanel>

                        <!-- User -->
                        <StackPanel Grid.Row="2" Margin="0 0 0 12">
                            <TextBlock Text="User"
                                       FontSize="13"
                                       Margin="0 0 0 2" />
                            <TextBox x:Name="UserTextBox"
                                     Height="32"
                                     materialDesign:HintAssist.IsFloating="True" />
                        </StackPanel>

                        <!-- Password -->
                        <StackPanel Grid.Row="3" Margin="0 0 0 8">
                            <TextBlock Text="Password"
                                       FontSize="13"
                                       Margin="0 0 0 2" />
                            <PasswordBox x:Name="PasswordBox"
                                         Height="32" />
                        </StackPanel>

                        <!-- Mensaje de error -->
                        <TextBlock x:Name="LoginErrorText"
                                   Grid.Row="4"
                                   Margin="0 4 0 0"
                                   FontSize="12"
                                   Foreground="{DynamicResource MaterialDesignValidationErrorBrush}"
                                   Visibility="Collapsed"
                                   TextWrapping="Wrap" />

                        <!-- Botón -->
                        <StackPanel Grid.Row="5"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Right"
                                    Margin="0 20 0 0">
                            <Button x:Name="LoginButton"
                                    Content="Login"
                                    Width="140"
                                    Height="36"
                                    Padding="12 0"
                                    Click="LoginButton_Click"
                                    HorizontalAlignment="Right"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    IsDefault="True" />
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
