<Window x:Class="TruckScale.Pos.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="{DynamicResource App.Title}" Height="720" Width="1200"
        WindowStartupLocation="CenterScreen"
        UseLayoutRounding="True" SnapsToDevicePixels="True" 
        TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="Auto"
        Style="{StaticResource MaterialDesignWindow}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        Background="{DynamicResource MaterialDesignPaper}"
        Loaded="Window_Loaded"
        WindowState="Maximized"
        PreviewKeyDown="Window_PreviewKeyDown"
        ResizeMode="NoResize"
        WindowStyle="None">

    <!-- ====== RECURSOS DE ESTILO ====== -->
    <Window.Resources>
        
        <!-- ===== COLORES PERSONALIZADOS ===== -->

        <!-- Métodos de pago -->
        <SolidColorBrush x:Key="PaymentCashBrush"     Color="#FF2E7D32"/>
        <!-- Cash -->
        <SolidColorBrush x:Key="PaymentCardBrush"     Color="#FF1976D2"/>
        <!-- Card -->
        <SolidColorBrush x:Key="PaymentBusinessBrush" Color="#FFF9A825"/>
        <!-- Business Account -->

        <!-- Botón DONE -->
        <SolidColorBrush x:Key="DoneCtaBg"   Color="#FF00C853"/>
        <SolidColorBrush x:Key="DoneCtaBgHv" Color="#FF00B34A"/>

        <!-- ====== RECURSOS DE ESTILO ====== -->

        
        <!-- Título grande -->
        <Style x:Key="TitleLarge" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <!-- TextBox alto y legible -->
        <Style x:Key="FieldBox" TargetType="{x:Type TextBox}"
               BasedOn="{StaticResource MaterialDesignOutlinedTextBox}">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="MinHeight" Value="44"/>
            <Setter Property="Padding" Value="12,10"/>
        </Style>

        <!-- Botones -->
        <Style x:Key="PrimaryRaised" TargetType="Button"
               BasedOn="{StaticResource MaterialDesignRaisedButton}">
            <Setter Property="MinHeight" Value="40"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style x:Key="PrimaryOutlined" TargetType="Button"
               BasedOn="{StaticResource MaterialDesignOutlinedButton}">
            <Setter Property="MinHeight" Value="40"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- Card MD3 -->
        <Style TargetType="{x:Type md:Card}">
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Background" Value="{DynamicResource MaterialDesignCardBackground}"/>
            <Setter Property="md:ElevationAssist.Elevation" Value="Dp2"/>
        </Style>

        <!-- Botón de tecla -->
        <Style x:Key="KeypadButton" TargetType="Button"
               BasedOn="{StaticResource MaterialDesignRaisedButton}">
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment"   Value="Stretch"/>
            <Setter Property="MinHeight" Value="56"/>
            <Setter Property="Margin"    Value="6"/>
            <Setter Property="FontSize"  Value="18"/>
        </Style>

        <!-- Botón de importe rápido -->
        <Style x:Key="QuickAmountButton" TargetType="Button"
               BasedOn="{StaticResource MaterialDesignOutlinedButton}">
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="MinHeight" Value="44"/>
            <Setter Property="Margin"    Value="6"/>
            <Setter Property="Padding"   Value="12,8"/>
            <Setter Property="FontSize"  Value="16"/>
        </Style>

        <!-- ===== KPI / Ledger helpers ===== -->
        <Style x:Key="AmountText" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="TextAlignment" Value="Right"/>
            <Setter Property="Typography.NumeralAlignment" Value="Tabular"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="LedgerLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Opacity" Value="0.75"/>
            <Setter Property="Margin" Value="0,2,0,2"/>
        </Style>

        <Style x:Key="LedgerValue" TargetType="TextBlock" BasedOn="{StaticResource AmountText}">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="12,2,0,2"/>
        </Style>

        <Style x:Key="KpiChip" TargetType="Border">
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="8,0,0,0"/>
            <Setter Property="BorderBrush" Value="{DynamicResource MaterialDesignDivider}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="{DynamicResource MaterialDesignCardBackground}"/>
        </Style>

        <Style x:Key="KpiCaption" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Opacity" Value="0.7"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>

        <!-- Form helpers -->
        <Style x:Key="FormGrid" TargetType="Grid"/>
        <Style x:Key="FormSection" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Opacity" Value="0.85"/>
            <Setter Property="Margin" Value="0,8,0,4"/>
        </Style>

        <!-- TextBox de diálogo -->
        <Style x:Key="FieldBoxPro" TargetType="{x:Type TextBox}" BasedOn="{StaticResource FieldBox}">
            <Setter Property="md:TextFieldAssist.HasClearButton" Value="True"/>
            <Setter Property="md:TextFieldAssist.DecorationVisibility" Value="Hidden"/>
        </Style>

        <!-- Card modal -->
        <Style x:Key="ModalCard" TargetType="{x:Type md:Card}">
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Width" Value="820"/>
            <Setter Property="md:ElevationAssist.Elevation" Value="Dp8"/>
        </Style>

        <!-- Botones modal -->
        <Style x:Key="DialogPrimaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryRaised}">
            <Setter Property="MinWidth" Value="96"/>
        </Style>
        <Style x:Key="DialogSecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryOutlined}">
            <Setter Property="MinWidth" Value="96"/>
        </Style>
        <SolidColorBrush x:Key="StartCtaBg"   Color="#2E7D32"/>
        <!-- green 800 -->
        <SolidColorBrush x:Key="StartCtaBgHv" Color="#1B5E20"/>
        <!-- green 900 -->
        <SolidColorBrush x:Key="StartCtaFg"   Color="#FFFFFF"/>
        <!-- Colores para WAIT (rojo) -->
        <SolidColorBrush x:Key="WaitCtaBg"   Color="#C62828"/>
        <!-- red 800 -->
        <SolidColorBrush x:Key="WaitCtaBgHv" Color="#B71C1C"/>
        <!-- red 900 -->

        <!-- Estilo del botón Start -->
        <Style x:Key="StartCTA" TargetType="Button" BasedOn="{StaticResource PrimaryRaised}">
            <Setter Property="Foreground" Value="{StaticResource StartCtaFg}"/>
            <Setter Property="Background" Value="{StaticResource StartCtaBg}"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="MinHeight" Value="48"/>
            <Setter Property="Padding" Value="22,12"/>
            <!-- Ojo: quitamos ShadowAssist.ShadowDepth -->
            <Setter Property="md:ButtonAssist.CornerRadius" Value="8"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource StartCtaBgHv}"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#184C1A"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.6"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="DoneCTA"
               TargetType="Button"
               BasedOn="{StaticResource PrimaryRaised}">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="{StaticResource DoneCtaBg}"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="MinHeight" Value="72"/>
            <Setter Property="MinWidth"  Value="240"/>
            <Setter Property="Padding"   Value="32,18"/>
            <Setter Property="md:ButtonAssist.CornerRadius" Value="24"/>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource DoneCtaBgHv}"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#00A844"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ProductOption" TargetType="ToggleButton" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
            <Setter Property="MinHeight" Value="64"/>
            <Setter Property="Padding"   Value="14,10"/>
            <Setter Property="Margin"    Value="0,8,12,0"/>
            <Setter Property="FontSize"  Value="16"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="md:ButtonAssist.CornerRadius" Value="10"/>
            <Setter Property="BorderBrush" Value="{DynamicResource MaterialDesignDivider}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Style.Triggers>
                <!-- Seleccionado -->
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background"  Value="{DynamicResource PrimaryHueMidBrush}"/>
                    <Setter Property="Foreground"  Value="{DynamicResource PrimaryHueMidForegroundBrush}"/>
                    <Setter Property="BorderBrush" Value="{DynamicResource PrimaryHueMidBrush}"/>
                </Trigger>
                <!-- Deshabilitado -->
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.6"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="PaymentButton"
               TargetType="Button"
               BasedOn="{StaticResource PrimaryOutlined}">
            <Setter Property="Margin" Value="12,0,0,0"/>
            <Setter Property="MinHeight" Value="56"/>
            <Setter Property="MinWidth"  Value="150"/>
            <Setter Property="Padding"   Value="22,12"/>
            <Setter Property="FontSize"  Value="16"/>
            <Setter Property="md:ButtonAssist.CornerRadius" Value="20"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>

            <Style.Triggers>
                <!-- Estado normal: solo borde/texto con color por método -->
                <DataTrigger Binding="{Binding Code}" Value="cash">
                    <Setter Property="BorderBrush" Value="{StaticResource PaymentCashBrush}"/>
                    <Setter Property="Foreground" Value="{StaticResource PaymentCashBrush}"/>
                </DataTrigger>

                <DataTrigger Binding="{Binding Code}" Value="card">
                    <Setter Property="BorderBrush" Value="{StaticResource PaymentCardBrush}"/>
                    <Setter Property="Foreground" Value="{StaticResource PaymentCardBrush}"/>
                </DataTrigger>

                <DataTrigger Binding="{Binding Code}" Value="business">
                    <Setter Property="BorderBrush" Value="{StaticResource PaymentBusinessBrush}"/>
                    <Setter Property="Foreground" Value="{StaticResource PaymentBusinessBrush}"/>
                </DataTrigger>

                <!-- Seleccionado (IsSelected=True) + code -> fondo sólido -->
                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding Code}"      Value="cash"/>
                        <Condition Binding="{Binding IsSelected}" Value="True"/>
                    </MultiDataTrigger.Conditions>
                    <Setter Property="Background"  Value="{StaticResource PaymentCashBrush}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource PaymentCashBrush}"/>
                    <Setter Property="Foreground"  Value="White"/>
                </MultiDataTrigger>

                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding Code}"      Value="card"/>
                        <Condition Binding="{Binding IsSelected}" Value="True"/>
                    </MultiDataTrigger.Conditions>
                    <Setter Property="Background"  Value="{StaticResource PaymentCardBrush}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource PaymentCardBrush}"/>
                    <Setter Property="Foreground"  Value="White"/>
                </MultiDataTrigger>

                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding Code}"      Value="business"/>
                        <Condition Binding="{Binding IsSelected}" Value="True"/>
                    </MultiDataTrigger.Conditions>
                    <Setter Property="Background"  Value="{StaticResource PaymentBusinessBrush}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource PaymentBusinessBrush}"/>
                    <Setter Property="Foreground"  Value="Black"/>
                </MultiDataTrigger>

                <!-- Deshabilitado -->
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.6"/>
                </Trigger>
            </Style.Triggers>
        </Style>



        <!-- Label para ejes -->
        <Style x:Key="AxleLabel" TargetType="Label">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="0,2,0,0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Label para TOTAL -->
        <Style x:Key="AxleTotalLabel" TargetType="Label" BasedOn="{StaticResource AxleLabel}">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground"
            Value="{DynamicResource PrimaryHueMidBrush}"/>
            <Setter Property="Margin" Value="0,6,0,0"/>
        </Style>
       


    </Window.Resources>

    <md:DialogHost x:Name="RootDialog">
        <md:DrawerHost x:Name="RootDrawerHost">

            <!-- ===== Menú lateral ===== -->
            <md:DrawerHost.LeftDrawerContent>
                <StackPanel Margin="12" Width="240">
                    <TextBlock Text="{DynamicResource Menu.Title}" FontWeight="Bold" Margin="0,0,0,12"/>
                    <Button Style="{StaticResource MaterialDesignOutlinedButton}" Content="{DynamicResource Menu.NewTicket}" Margin="0,0,0,8"/>
                    <Button Style="{StaticResource MaterialDesignOutlinedButton}" Content="{DynamicResource Menu.ScaleMonitor}" Margin="0,0,0,8"/>
                    <Button Style="{StaticResource MaterialDesignOutlinedButton}" Content="{DynamicResource Menu.Tickets}"/>
                </StackPanel>
            </md:DrawerHost.LeftDrawerContent>

            <!-- ===== CONTENIDO ===== -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="47"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="73*"/>
                    <ColumnDefinition Width="1127*"/>
                </Grid.ColumnDefinitions>
                <!-- Top bar -->
                <md:ColorZone Mode="Standard" Padding="12" Height="56"
                              Background="{DynamicResource MaterialDesignPaper}" Grid.ColumnSpan="2" Grid.RowSpan="2">
                    <DockPanel LastChildFill="True">
                        <Button Content="☰" Width="40" Height="32" Margin="0,0,8,0" Click="ToggleDrawer_Click"/>
                        <TextBlock Text="{DynamicResource App.Title}" FontSize="18" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                            <Button Content="{DynamicResource Theme.Toggle}" Click="ToggleTheme_Click" Margin="8,0"/>
                        </StackPanel>
                    </DockPanel>
                </md:ColorZone>

                <!-- Layout principal -->
                <Grid Margin="16,25,16,32" Grid.ColumnSpan="2" Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="320"/>
                        <!-- Izquierda: Live weight -->
                        <ColumnDefinition Width="*"/>
                        <!-- Centro: formulario -->
                        <ColumnDefinition Width="260"/>
                        <!-- Derecha: quick actions + log (más angosta) -->
                    </Grid.ColumnDefinitions>

                    <!-- ===== COLUMNA IZQUIERDA ===== -->
                    <Grid Grid.Column="0" Margin="0,0,16,0" RenderTransformOrigin="0.509,0.562">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto" MinHeight="491"/>
                            <RowDefinition Height="Auto" MinHeight="61"/>
                        </Grid.RowDefinitions>

                        <!-- MONITOR -->
                        <md:Card Grid.Row="0" Grid.RowSpan="2" Margin="0,0,0,58">
                            <StackPanel Margin="0,-2,0,2">
                                <TextBlock Text="{DynamicResource LiveWeight}" Style="{StaticResource TitleLarge}"/>
                                <Border Margin="0,8,0,12" Padding="12" CornerRadius="10"
                                        Background="{DynamicResource MaterialDesignCardBackground}" Height="125">
                                    <Viewbox Stretch="Uniform" StretchDirection="DownOnly" MaxHeight="120" Margin="0,0,0,20">
                                        <TextBlock x:Name="WeightText"
                                                   Text="0.0 lb"
                                                   FontSize="72"
                                                   FontWeight="SemiBold"
                                                   HorizontalAlignment="Center"/>
                                    </Viewbox>
                                </Border>

                                <Grid Margin="0,8,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Botón WAIT / OK (semáforo) -->
                                    <Button x:Name="OkButton" Grid.Column="0" Style="{StaticResource StartCTA}" Click="OkButton_Click">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <md:PackIcon x:Name="OkButtonIcon" Kind="TimerSand" Width="18" Height="18" Margin="0,0,8,0"/>
                                            <TextBlock x:Name="OkButtonLabel" Text="WAIT"/>
                                        </StackPanel>
                                    </Button>

                                    <Button Grid.Column="1"
                                            Style="{StaticResource PrimaryOutlined}"
                                            Content="{DynamicResource Zero}"
                                            Margin="8,0,0,0"
                                            Click="Zero_Click"/>
                                </Grid>

                                <!-- Ejes por sesión -->
                                <StackPanel Margin="0,12,0,0">
                                    <TextBlock Text="Ejes por sesión" Style="{StaticResource TitleLarge}" />
                                </StackPanel>
                                <Label x:Name="lblEje1" Style="{StaticResource AxleLabel}" Content="Axle 1: 0 lb"/>
                                <Label x:Name="lblEje2" Style="{StaticResource AxleLabel}" Content="Axle 2: 0 lb"/>
                                <Label x:Name="lblEje3" Style="{StaticResource AxleLabel}" Content="Axle 3: 0 lb"/>
                                <Label x:Name="lblUUID" Style="{StaticResource AxleTotalLabel}" Content="Total: 0 lb"/>
                            </StackPanel>
                        </md:Card>

                        <!-- STATUS CARD -->
                        <md:Card Grid.Row="2" x:Name="StatusCard" Padding="40" Margin="0,8,0,0">
                            <md:Card.Resources>
                                <SolidColorBrush x:Key="StIdleBg" Color="#ECEFF1"/>
                                <SolidColorBrush x:Key="StIdleBr" Color="#90A4AE"/>
                                <SolidColorBrush x:Key="StIdleFg" Color="#37474F"/>

                                <SolidColorBrush x:Key="StConnectedBg" Color="#E8F5E9"/>
                                <SolidColorBrush x:Key="StConnectedBr" Color="#2E7D32"/>
                                <SolidColorBrush x:Key="StConnectedFg" Color="#1B5E20"/>

                                <SolidColorBrush x:Key="StConnectingBg" Color="#FFF8E1"/>
                                <SolidColorBrush x:Key="StConnectingBr" Color="#F9A825"/>
                                <SolidColorBrush x:Key="StConnectingFg" Color="#5D4037"/>

                                <SolidColorBrush x:Key="StErrorBg" Color="#FFEBEE"/>
                                <SolidColorBrush x:Key="StErrorBr" Color="#C62828"/>
                                <SolidColorBrush x:Key="StErrorFg" Color="#B71C1C"/>
                            </md:Card.Resources>

                            <md:Card.Style>
                                <Style TargetType="{x:Type md:Card}">
                                    <Setter Property="Background" Value="{DynamicResource MaterialDesignCardBackground}"/>
                                    <Setter Property="BorderBrush" Value="{DynamicResource MaterialDesignDivider}"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                    <Setter Property="md:ElevationAssist.Elevation" Value="Dp2"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ElementName=lblTemp, Path=Content}" Value="Waiting">
                                            <Setter Property="Background"  Value="{StaticResource StIdleBg}"/>
                                            <Setter Property="BorderBrush" Value="{StaticResource StIdleBr}"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding ElementName=lblTemp, Path=Content}" Value="Connected">
                                            <Setter Property="Background"  Value="{StaticResource StConnectedBg}"/>
                                            <Setter Property="BorderBrush" Value="{StaticResource StConnectedBr}"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding ElementName=lblTemp, Path=Content}" Value="Connecting">
                                            <Setter Property="Background"  Value="{StaticResource StConnectingBg}"/>
                                            <Setter Property="BorderBrush" Value="{StaticResource StConnectingBr}"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding ElementName=lblTemp, Path=Content}" Value="Error">
                                            <Setter Property="Background"  Value="{StaticResource StErrorBg}"/>
                                            <Setter Property="BorderBrush" Value="{StaticResource StErrorBr}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </md:Card.Style>

                            <Label x:Name="lblTemp"
                                   Content="Waiting"
                                   HorizontalContentAlignment="Center"
                                   FontSize="24"
                                   FontWeight="SemiBold">
                                <Label.Style>
                                    <Style TargetType="Label">
                                        <Setter Property="Foreground" Value="{DynamicResource Foreground}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Content, RelativeSource={RelativeSource Self}}" Value="Waiting">
                                                <Setter Property="Foreground" Value="{StaticResource StIdleFg}"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Content, RelativeSource={RelativeSource Self}}" Value="Connected">
                                                <Setter Property="Foreground" Value="{StaticResource StConnectedFg}"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Content, RelativeSource={RelativeSource Self}}" Value="Connecting">
                                                <Setter Property="Foreground" Value="{StaticResource StConnectingFg}"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Content, RelativeSource={RelativeSource Self}}" Value="Error">
                                                <Setter Property="Foreground" Value="{StaticResource StErrorFg}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Label.Style>
                            </Label>
                        </md:Card>

                        <Label x:Name="lblEstado"
                               Content="Label"
                               HorizontalAlignment="Center"
                               Margin="0,466,0,0"
                               Opacity="0.7"
                               FontStyle="Italic"
                               Grid.Row="1"
                               VerticalAlignment="Top"
                               Height="88"
                               Grid.RowSpan="2"
                               Width="284"/>
                    </Grid>

                    <!-- ===== COLUMNA CENTRAL ===== -->
                    <Grid Grid.Column="1" x:Name="MidCol" Margin="0,0,16,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <!-- Service + resumen -->
                            <RowDefinition Height="Auto"/>
                            <!-- Payment method + DONE -->
                            <RowDefinition Height="*"/>
                            <!-- Denominations + Driver summary -->
                        </Grid.RowDefinitions>

                        <!-- ROW 0: Service + Payment summary + Payments received + Balance -->
                        <md:Card Grid.Row="0" Margin="0,0,0,16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2.2*"/>
                                    <!-- Service -->
                                    <ColumnDefinition Width="1.6*"/>
                                    <!-- Payment summary -->
                                    <ColumnDefinition Width="4"/>
                                    <!-- Separador -->
                                    <ColumnDefinition Width="1.6*"/>
                                    <!-- Payments received -->
                                    <ColumnDefinition Width="1.2*"/>
                                    <!-- Balance -->
                                </Grid.ColumnDefinitions>

                                <!-- Service -->
                                <StackPanel Grid.Column="0" Margin="0,0,12,0">
                                    <TextBlock Text="Service" Style="{StaticResource TitleLarge}" Margin="0,0,0,6"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <ToggleButton x:Name="WeighToggle"
                                                      Grid.Column="0"
                                                      Style="{StaticResource ProductOption}"
                                                      Margin="0,0,8,0"
                                                      Checked="WeighToggle_Checked">
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                <md:PackIcon Kind="Scale" Width="20" Height="20" Margin="0,0,10,0"/>
                                                <TextBlock Text="Weigh" FontWeight="SemiBold"/>
                                            </StackPanel>
                                        </ToggleButton>

                                        <ToggleButton x:Name="ReweighToggle"
                                                      Grid.Column="1"
                                                      Style="{StaticResource ProductOption}"
                                                      Margin="8,0,0,0"
                                                      Checked="ReweighToggle_Checked">
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                <md:PackIcon Kind="History" Width="20" Height="20" Margin="0,0,2,0"/>
                                                <TextBlock Text="Reweigh" FontWeight="SemiBold"/>
                                            </StackPanel>
                                        </ToggleButton>
                                    </Grid>
                                </StackPanel>

                                <!-- Payment summary (ANTES: Order total) -->
                                <Border Grid.Column="1"
                                        Margin="12,0,12,0"
                                        Padding="10"
                                        CornerRadius="8"
                                        BorderBrush="{DynamicResource MaterialDesignDivider}"
                                        BorderThickness="1">
                                    <StackPanel HorizontalAlignment="Center">
                                        <TextBlock Text="Payment summary"
                                                   Style="{StaticResource FormSection}"
                                                   HorizontalAlignment="Center"
                                                   Margin="0,0,0,4"/>
                                        <TextBlock x:Name="TotalVentaBigText"
                                                   Text="$0.00"
                                                   FontSize="32"
                                                   FontWeight="SemiBold"
                                                   HorizontalAlignment="Center"
                                                   TextAlignment="Center"
                                                   Typography.NumeralAlignment="Tabular"/>
                                    </StackPanel>
                                </Border>

                                <!-- Separador visual -->
                                <Border Grid.Column="2"
                                        Background="{DynamicResource MaterialDesignDivider}"
                                        Margin="0,4,0,4"/>

                                <!-- Payments received -->
                                <Border Grid.Column="3"
                                        Margin="12,0,12,0"
                                        Padding="10"
                                        CornerRadius="8"
                                        BorderBrush="{DynamicResource MaterialDesignDivider}"
                                        BorderThickness="1">
                                    <StackPanel>
                                        <TextBlock Text="Payments received"
                                                   Style="{StaticResource FormSection}"
                                                   Margin="0,0,0,4"/>
                                        <Grid>
                                            <ItemsControl x:Name="PagosList">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <StackPanel/>
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <DockPanel Margin="0,2,0,2">
                                                            <TextBlock Text="{Binding Metodo}" />
                                                            <TextBlock Text="{Binding Monto, StringFormat={}{0:C}}"
                                                                       DockPanel.Dock="Right"
                                                                       Style="{StaticResource AmountText}"/>
                                                        </DockPanel>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>

                                            <!-- Placeholder -->
                                            <TextBlock x:Name="PagosEmpty"
                                                       Text="{DynamicResource Payment.Empty}"
                                                       Opacity="0.6"
                                                       Margin="0,2,0,0">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding HasItems, ElementName=PagosList}" Value="False">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>

                                            <!-- Total recibido (OCULTO, para no romper code-behind) -->
                                            <TextBlock x:Name="PagoRecibidoText"
                                                       Style="{StaticResource AmountText}"
                                                       FontSize="16"
                                                       Margin="0,4,0,0"
                                                       Visibility="Collapsed"/>
                                        </Grid>
                                    </StackPanel>
                                </Border>

                                <!-- Balance (Change) -->
                                <Border Grid.Column="4"
                                        Margin="12,0,0,0"
                                        Padding="10"
                                        CornerRadius="8"
                                        BorderBrush="{DynamicResource MaterialDesignDivider}"
                                        BorderThickness="1">
                                    <StackPanel HorizontalAlignment="Center">
                                        <TextBlock Text="Balance $"
                                                   Style="{StaticResource FormSection}"
                                                   HorizontalAlignment="Center"
                                                   TextAlignment="Center"
                                                   Margin="0,0,0,4"/>
                                        <TextBlock x:Name="BalanceText"
                                                   Text="0.00"
                                                   Style="{StaticResource AmountText}"
                                                   HorizontalAlignment="Center"
                                                   TextAlignment="Center"
                                                   FontSize="28"
                                                   Foreground="{DynamicResource MaterialDesignValidationErrorBrush}"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </md:Card>

                        <!-- ROW 1: Payment method + DONE -->
                        <md:Card Grid.Row="1"
                                 MinHeight="130"
                                 Margin="0,0,0,16"
                                 Padding="18,18,18,18">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Label + botones de método de pago -->
                                <Grid Grid.Column="0">
                                    <Grid.RowDefinitions>
                                        <!-- Título -->
                                        <RowDefinition Height="Auto"/>
                                        <!-- Botones -->
                                        <RowDefinition Height="Auto"/>
                                        <!-- Referencia -->
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Label -->
                                    <TextBlock Grid.Row="0"
                                       Text="{DynamicResource Payment.MethodTitle}"
                                       Style="{StaticResource TitleLarge}"
                                       Margin="0,0,0,8"
                                       VerticalAlignment="Center"/>

                                    <!-- Botones de método de pago -->
                                    <ItemsControl Grid.Row="1" x:Name="PaymentMethodsItems"
              ItemsSource="{Binding PaymentMethods, RelativeSource={RelativeSource AncestorType=Window}}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>

                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Button Click="PaymentMethod_Click"
                    Style="{StaticResource PaymentButton}"
                    IsEnabled="{Binding IsEnabled}">
                                                    <StackPanel Orientation="Horizontal">
                                                        <md:PackIcon Kind="{Binding IconKind}"
                                 Width="18"
                                 Height="18"
                                 Margin="0,0,8,0"/>
                                                        <TextBlock Text="{Binding Name}"/>
                                                    </StackPanel>
                                                </Button>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>


                                    <!-- Referencia (Credit / Business account) -->
                                    <StackPanel x:Name="RefPanel"
                                        Grid.Row="2"
                                        Margin="0,12,0,0"
                                        Visibility="Collapsed">
                                        <TextBlock Text="{DynamicResource Reference}" Opacity="0.7"/>
                                        <TextBox x:Name="RefText" Style="{StaticResource FieldBox}" />
                                    </StackPanel>
                                </Grid>


                                <!-- Botón DONE súper grande y centrado -->
                                <Button x:Name="DoneButton"
                                        Grid.Column="1"
                                        Style="{StaticResource DoneCTA}"
                                        Margin="32,4,0,4"
                                        VerticalAlignment="Center"
                                        Click="DoneButton_Click">
                                    <StackPanel Orientation="Horizontal"
                                                HorizontalAlignment="Center">
                                        <md:PackIcon Kind="CheckBold"
                                                     Width="22"
                                                     Height="22"
                                                     Margin="0,0,10,0"/>
                                        <TextBlock Text="DONE"
                                                   FontSize="20"
                                                   FontWeight="Bold"/>
                                    </StackPanel>
                                </Button>

                            </Grid>
                        </md:Card>
                        <!-- ROW 2: Denominations (mitad) + Driver summary (mitad) -->
                        <Grid Grid.Row="2" Margin="0,16,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Denominations -->
                            <md:Card Grid.Column="0" Margin="0,0,8,0">
                                <StackPanel>
                                    <TextBlock Text="{DynamicResource Denominations}"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               Margin="0,0,0,6"/>
                                    <ItemsControl x:Name="DenomsHost">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <UniformGrid Columns="2"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Button Style="{StaticResource QuickAmountButton}"
                                                        Content="{Binding}"
                                                        Tag="{Binding}"
                                                        Click="Denom_Click"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </md:Card>

                            <!-- Driver summary en la otra mitad -->

                            <!-- Driver summary en la otra mitad -->
                            <md:Card x:Name="DriverCard"
                             Grid.Column="1"
                             Margin="8,0,0,0"
                             Padding="22"
                             UniformCornerRadius="12"
                             Visibility="Collapsed">
                                <StackPanel>

                                    <!-- Header -->
                                    <StackPanel Orientation="Horizontal"
                                    VerticalAlignment="Center"
                                    Margin="0,0,0,6">
                                        <md:PackIcon Kind="AccountTie"
                                         Width="24"
                                         Height="24"
                                         Opacity="0.9"
                                         Margin="0,0,8,0"/>
                                        <TextBlock Text="Driver summary"
                                           FontWeight="SemiBold"
                                           FontSize="16"
                                           VerticalAlignment="Center"/>
                                    </StackPanel>

                                    <Separator Margin="0,4,0,10"/>

                                    <!-- Nombre del chofer destacado -->
                                    <TextBlock x:Name="DriverNameText"
                                       Text="—"
                                       FontSize="22"
                                       FontWeight="Bold"
                                       Margin="0,0,0,8"/>

                                    <!-- “Subtítulo” cuenta -->
                                    <TextBlock Text="Account and service"  FontSize="12"
                                       Opacity="0.7"
                                       Margin="0,0,0,4"/>

                                    <!-- Detalles en dos columnas -->
                                    <Grid Margin="0,2,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <!-- Columna izquierda -->
                                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                                                <md:PackIcon Kind="AccountMultipleOutline"
                                 Width="16"
                                 Height="16"
                                 Opacity="0.75"
                                 Margin="0,0,6,0"/>
                                                <TextBlock x:Name="DriverAccountText"
                               Text="Account: —"
                               FontSize="14"
                               Opacity="0.95"/>
                                            </StackPanel>

                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                                                <md:PackIcon Kind="PackageVariantClosed"
                                 Width="16"
                                 Height="16"
                                 Opacity="0.75"
                                 Margin="0,0,6,0"/>
                                                <TextBlock x:Name="DriverProductText"
                               Text="Product: —"
                               FontSize="14"
                               Opacity="0.95"/>
                                            </StackPanel>

                                            <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                                <md:PackIcon Kind="License"
                                 Width="16"
                                 Height="16"
                                 Opacity="0.75"
                                 Margin="0,0,6,0"/>
                                                <TextBlock x:Name="DriverLicenseText"
                               Text="License: —"
                               FontSize="14"
                               Opacity="0.95"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <!-- Columna derecha -->
                                        <StackPanel Grid.Column="1">
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                                                <md:PackIcon Kind="Car"
                                 Width="16"
                                 Height="16"
                                 Opacity="0.75"
                                 Margin="0,0,6,0"/>
                                                <TextBlock x:Name="DriverPlatesText"
                               Text="Plates: —"
                               FontSize="14"
                               Opacity="0.95"/>
                                            </StackPanel>

                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                                                <md:PackIcon Kind="Truck"
                                 Width="16"
                                 Height="16"
                                 Opacity="0.75"
                                 Margin="0,0,6,0"/>
                                                <TextBlock x:Name="DriverUnitText"
                               Text="Unit: —"
                               FontSize="14"
                               Opacity="0.95"/>
                                            </StackPanel>

                                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                <md:PackIcon Kind="MapMarker"
                                 Width="16"
                                 Height="16"
                                 Opacity="0.75"
                                 Margin="0,0,6,0"/>
                                                <TextBlock x:Name="DriverAccountAddressText"
                               Text="Address: —"
                               FontSize="14"
                               TextWrapping="Wrap"
                               Opacity="0.9"
                               MaxWidth="260"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                            </md:Card>


                        </Grid>
                    </Grid>

                    <!-- ===== COLUMNA DERECHA (más pequeña) ===== -->
                    <StackPanel Grid.Column="2" x:Name="RightCol">
                        <md:Card Padding="16" Margin="0,0,0,12">
                            <StackPanel>
                                <TextBlock Text="{DynamicResource QuickActions}" FontWeight="SemiBold"/>
                                <Button Style="{StaticResource PrimaryRaised}"
                                        Content="{DynamicResource Driver.Register}"
                                        Margin="0,12,0,8"
                                        Click="RegisterDriver_Click"/>
                                <!--<Button Style="{StaticResource PrimaryRaised}"
                                        Content="{DynamicResource Ticket.New}"
                                        Margin="0,12,0,0"
                                        Click="Button_Click"/>
                                <Button Style="{StaticResource PrimaryOutlined}" Content="{DynamicResource Reprint}"/>
                                <Button Style="{StaticResource PrimaryOutlined}" Content="{DynamicResource Search}"/>-->
                            </StackPanel>
                        </md:Card>

                        <TextBox x:Name="txtLogTemp"
                                 TextWrapping="Wrap"
                                 Text="TextBox"
                                 Width="Auto"
                                 Height="309"
                                 VerticalScrollBarVisibility="Auto"/>
                    </StackPanel>

                    <!-- BLOQUEO UI (cubre columnas 1 y 2) -->
                    <Grid Grid.Column="1" Grid.ColumnSpan="2" x:Name="UiBlocker" Visibility="Visible" IsHitTestVisible="True">
                        <Border CornerRadius="12" Background="#80FFFFFF" BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="1">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <md:PackIcon Kind="Lock" Width="28" Height="28" Opacity="0.7" Margin="0,0,0,6"/>
                                <TextBlock Text="{Binding ElementName=lblTemp, Path=Content}" FontSize="18" FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0,0,0,4"/>
                                <TextBlock Text="Scale is controlled automatically" Opacity="0.7" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Grid>


                <!-- Barra de estado -->
                <DockPanel Height="28" VerticalAlignment="Bottom" Margin="8,0" Opacity="0.8" Grid.ColumnSpan="2" Grid.Row="1">
                    <TextBlock x:Name="ScaleStateText" Text="{DynamicResource Scale.Simulated}"/>
                    <TextBlock Text="   |   " />
                    <TextBlock>
                        <Run Text="{DynamicResource Operator}"/>    
                        <Run Text=": " />
                        <Run x:Name="OperatorNameRun" Text="admin"/>
                    </TextBlock>
                    <TextBlock Text="   |   " />
                    <TextBlock Text="{Binding ElementName=WeightText, Path=Text}" />

                    <!-- NUEVO: Indicador de sincronización -->
                    <TextBlock Text="   |   " />
                    <TextBlock x:Name="SyncStatusText" 
               Text="🟢 Sync: Active" 
               ToolTip="Ctrl+Alt+F9 for sync debug"/>
                </DockPanel>

                <!-- === SALE COMPLETED DIALOG === -->
                <md:DialogHost x:Name="SaleCompletedHost" Grid.RowSpan="99" Grid.ColumnSpan="99"  Panel.ZIndex="100">
                    <md:DialogHost.DialogContent>
                        <Grid Width="520" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <md:Card Padding="18" md:ElevationAssist.Elevation="Dp3" UniformCornerRadius="16">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Header -->
                                    <StackPanel Orientation="Horizontal">
                                        <md:PackIcon Kind="CheckCircle" Width="28" Height="28"
                         Foreground="{DynamicResource PrimaryHueMidBrush}"
                         Margin="0,0,8,0"/>
                                        <TextBlock Text="Sale completed" FontSize="20" FontWeight="SemiBold"/>
                                    </StackPanel>

                                    <!-- KPI row -->
                                    <Grid Grid.Row="1" Margin="0,14,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                            <TextBlock Text="Total" Opacity=".7"/>
                                            <TextBlock x:Name="DlgSaleTotal" FontSize="20" FontWeight="Bold"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                            <TextBlock Text="Received" Opacity=".7"/>
                                            <TextBlock x:Name="DlgSaleReceived" FontSize="20" FontWeight="Bold"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                            <TextBlock Text="Change" Opacity=".7"/>
                                            <TextBlock x:Name="DlgSaleChange" FontSize="20" FontWeight="Bold"
                         Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                        </StackPanel>
                                    </Grid>

                                    <!-- Ticket + spinner -->
                                    <StackPanel Grid.Row="2" Margin="0,16,0,0" Orientation="Horizontal" VerticalAlignment="Center">
                                        <md:PackIcon Kind="ReceiptText" Width="22" Height="22" Margin="0,0,8,0"/>
                                        <TextBlock Text="Printing ticket…" VerticalAlignment="Center"/>
                                        <ProgressBar x:Name="DlgTicketProgress" IsIndeterminate="True" Width="140" Height="4" Margin="10,0,0,0"/>
                                    </StackPanel>

                                    <!-- Footer -->
                                    <DockPanel Grid.Row="3" Margin="0,18,0,0">
                                        <TextBlock x:Name="DlgSaleUid" DockPanel.Dock="Left" Opacity=".7" TextWrapping="Wrap"/>
                                        <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                                            <Button x:Name="DlgReprintBtn" Content="Reprint"
                      Style="{StaticResource MaterialDesignOutlinedButton}" Margin="0,0,8,0"/>
                                            <Button x:Name="DlgCloseBtn" Content="Close" IsDefault="True"/>
                                        </StackPanel>
                                    </DockPanel>
                                </Grid>
                            </md:Card>
                        </Grid>
                    </md:DialogHost.DialogContent>
                </md:DialogHost>


                <!-- === DRIVER SAVED DIALOG === -->
                <md:DialogHost x:Name="DriverSavedHost" Grid.RowSpan="99" Grid.ColumnSpan="99" Panel.ZIndex="100">
                    <md:DialogHost.DialogContent>
                        <Grid Width="480" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <md:Card Padding="18" md:ElevationAssist.Elevation="Dp2" UniformCornerRadius="16">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <md:PackIcon Kind="BadgeAccount" Width="26" Height="26"  Foreground="{DynamicResource PrimaryHueMidBrush}"  Margin="0,0,8,0"/>
                                        <TextBlock Text="Driver saved" FontSize="20" FontWeight="SemiBold"/>
                                    </StackPanel>

                                    <StackPanel Margin="0,10,0,0">
                                        <TextBlock x:Name="DlgDrvName"  FontSize="16" FontWeight="SemiBold"/>
                                        <TextBlock x:Name="DlgDrvExtra" Opacity=".8"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                                        <Button x:Name="DlgDrvOkBtn" Content="OK" IsDefault="True"/>
                                    </StackPanel>
                                </StackPanel>
                            </md:Card>
                        </Grid>
                    </md:DialogHost.DialogContent>
                </md:DialogHost>

                <!-- === GENERIC ALERT DIALOG (CENTERED) === -->
                <md:DialogHost x:Name="AlertHost"
                   Grid.RowSpan="99"
                   Grid.ColumnSpan="99"
                   Panel.ZIndex="100">
                    <md:DialogHost.DialogContent>
                        <Grid Width="420"
              HorizontalAlignment="Center"
              VerticalAlignment="Center">
                            <md:Card Padding="18"
                     md:ElevationAssist.Elevation="Dp2"
                     UniformCornerRadius="16">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Título + icono -->
                                    <StackPanel Grid.Row="0"
                                Orientation="Horizontal"
                                Margin="0,0,0,12">
                                        <md:PackIcon x:Name="AlertIcon"
                                     Kind="InformationOutline"
                                     Width="26" Height="26"
                                     Margin="0,0,8,0"
                                     Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                        <TextBlock x:Name="AlertTitle"
                                   VerticalAlignment="Center"
                                   FontSize="18"
                                   FontWeight="SemiBold"/>
                                    </StackPanel>

                                    <!-- Mensaje -->
                                    <TextBlock x:Name="AlertMessage"
                               Grid.Row="1"
                               TextWrapping="Wrap"
                               Margin="0,0,0,20"/>

                                    <!-- Botón OK -->
                                    <StackPanel Grid.Row="2"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right">
                                        <Button x:Name="AlertOkButton"
                                MinWidth="80"
                                IsDefault="True"
                                Style="{StaticResource MaterialDesignRaisedButton}">
                                            <StackPanel Orientation="Horizontal" Margin="4,2">
                                                <md:PackIcon Kind="Check"
                                             Width="18" Height="18"
                                             Margin="0,0,4,0"/>
                                                <TextBlock Text="OK"/>
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </Grid>
                            </md:Card>
                        </Grid>
                    </md:DialogHost.DialogContent>
                </md:DialogHost>

                <!-- ================== REWEIGH TICKET DIALOG ================== -->
                <md:DialogHost x:Name="ReweighHost"
                    Identifier="ReweighHost"
                    Grid.RowSpan="99"
                    Grid.ColumnSpan="99"
                    Panel.ZIndex="100">
                    <md:DialogHost.DialogContent>
                        <!-- Contenedor centrado -->
                            <Grid Width="620"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                            <md:Card Padding="24"
                             md:ElevationAssist.Elevation="Dp2"
                             UniformCornerRadius="16">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Título -->
                                    <StackPanel Grid.Row="0"
                                Orientation="Horizontal"
                                Margin="0,0,0,16">
                                        <md:PackIcon Kind="QrCodeScan"
                                     Width="32"
                                     Height="32"
                                     Margin="0,0,10,0"
                                     VerticalAlignment="Center"/>
                                        <TextBlock Text="Reweigh ticket"
                                   FontSize="22"
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"/>
                                    </StackPanel>

                                    <!-- Descripción -->
                                    <TextBlock Grid.Row="1"
                               Text="Escanea el código QR del ticket original o pega el JSON completo."
                               TextWrapping="Wrap"
                               Margin="0,0,0,18"
                               Opacity="0.8"/>

                                    <!-- Input grande para ticket / JSON -->
                                    <TextBox Grid.Row="2"
                             x:Name="ReweighTicketInputTextBox"
                             md:HintAssist.Hint="Ticket / QR / JSON"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             md:TextFieldAssist.DecorationVisibility="Hidden"
                             Margin="0,0,0,18"
                             FontSize="18"
                             Height="56"
                             HorizontalAlignment="Stretch"
                             VerticalContentAlignment="Center"
                             TextWrapping="NoWrap"
                             KeyDown="ReweighTicketInputTextBox_KeyDown"/>
                                    <!-- si quieres limitar: MaxLength="512" -->

                                    <!-- Botones -->
                                    <StackPanel Grid.Row="3"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right">
                                        <Button Content="Cancelar"
                                Margin="0,0,8,0"
                                Padding="18,6"
                                Command="{x:Static md:DialogHost.CloseDialogCommand}"
                                CommandParameter="{x:Null}"
                                Click="ReweighCancelButton_Click"/>

                                        <Button Content="Continuar"
                                Padding="18,6"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Click="ReweighAcceptButton_Click"/>
                                    </StackPanel>
                                </Grid>
                            </md:Card>
                        </Grid>
                    </md:DialogHost.DialogContent>
                </md:DialogHost>




            </Grid>

        </md:DrawerHost>


     
        <!-- ===== MODAL: Registrar chofer ===== -->
        <md:DialogHost.DialogContent>
            <md:Card Padding="24" Width="980" MaxHeight="1100"  HorizontalAlignment="Center">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- Header -->
                        <RowDefinition Height="*"/>
                        <!-- Form scrolleable -->
                        <RowDefinition Height="Auto"/>
                        <!-- Footer fijo -->
                    </Grid.RowDefinitions>

                    <!-- ===== Encabezado ===== -->
                    <Border Grid.Row="0"
                    Padding="0,0,0,12"
                    BorderBrush="{DynamicResource MaterialDesignDivider}"
                    BorderThickness="0,0,0,1">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <md:PackIcon Kind="Steering" Width="20" Height="20"
                                 Opacity="0.85" Margin="0,0,8,0"/>
                            <TextBlock Text="{DynamicResource Driver.Dialog.Title}"
                               Style="{StaticResource TitleLarge}" />
                        </StackPanel>
                    </Border>

                    <!-- ===== Formulario scrolleable ===== -->
                    <ScrollViewer Grid.Row="1"
                          Margin="0,8,0,0"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled">
                        <Grid MouseDown="DialogBody_MouseDown">
                            <!-- 2 columnas -->
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!-- Filas -->
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <!-- 0: Driver information header -->
                                <RowDefinition Height="Auto"/>
                                <!-- 1: Phone -->
                                <RowDefinition Height="Auto"/>
                                <!-- 2: Driver header -->
                                <RowDefinition Height="Auto"/>
                                <!-- 3: Driver fields -->
                                <RowDefinition Height="Auto"/>
                                <!-- 4: Service header -->
                                <RowDefinition Height="Auto"/>
                                <!-- 5: Company -->
                                <RowDefinition Height="Auto"/>
                                <!-- 6: Account name -->
                                <RowDefinition Height="Auto"/>
                                <!-- 7: Account address -->
                                <RowDefinition Height="Auto"/>
                                <!-- 8: Country/state -->
                                <RowDefinition Height="Auto"/>
                                <!-- 9: Vehicle header -->
                                <RowDefinition Height="Auto"/>
                                <!-- 10: Plates -->
                                <RowDefinition Height="Auto"/>
                                <!-- 11: License state -->
                                <RowDefinition Height="Auto"/>
                                <!-- 12: Trailer/Tractor -->
                                <RowDefinition Height="Auto"/>
                                <!-- 13: Product header -->
                                <RowDefinition Height="Auto"/>
                                <!-- 14: Product -->
                            </Grid.RowDefinitions>

                            <!-- ===== Driver information ===== -->
                            <Border Grid.Row="0" Grid.ColumnSpan="2"
                            BorderBrush="{DynamicResource MaterialDesignDivider}"
                            BorderThickness="0,0,0,1"
                            Padding="0,0,0,6"
                            Margin="0,0,0,6">
                                <TextBlock Text="Driver information" Opacity="0.7"/>
                            </Border>

                            <!-- Phone (10 digits) -->
                            <TextBox x:Name="DriverPhoneText"
                             Grid.Row="1" Grid.ColumnSpan="2"
                             Style="{StaticResource FieldBox}"
                             md:HintAssist.Hint="Phone (10 digits)"
                             Margin="0,4,0,12"
                             MaxLength="14"
                             PreviewTextInput="DigitsOnly_PreviewTextInput"
                             DataObject.Pasting="DigitsOnly_Pasting"
                             LostFocus="DriverPhoneText_LostFocus"/>

                            <!-- ===== Driver ===== -->
                            <Border Grid.Row="2" Grid.ColumnSpan="2"
                            BorderBrush="{DynamicResource MaterialDesignDivider}"
                            BorderThickness="0,1,0,0"
                            Padding="0,12,0,0"
                            Margin="0,8,0,6">
                                <TextBlock Text="{DynamicResource Driver.Section}" Opacity="0.7"/>
                            </Border>

                            <Grid Grid.Row="3" Grid.ColumnSpan="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <!-- First/Last -->
                                    <RowDefinition Height="Auto"/>
                                    <!-- License no. -->
                                    <RowDefinition Height="Auto"/>
                                    <!-- Status -->
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- First / Last name -->
                                <TextBox x:Name="ChoferNombreText"
                                 Grid.Row="0" Grid.Column="0"
                                 Style="{StaticResource FieldBox}"
                                 md:HintAssist.Hint="{StaticResource FirstName}"
                                 Margin="0,0,8,12"/>

                                <TextBox x:Name="ChoferApellidosText"
                                 Grid.Row="0" Grid.Column="1"
                                 Style="{StaticResource FieldBox}"
                                 md:HintAssist.Hint="{StaticResource LastName}"
                                 Margin="8,0,0,12"/>

                                <!-- Driver License # -->
                                <TextBox x:Name="LicenciaNumeroText"
                                 Grid.Row="1" Grid.ColumnSpan="2"
                                 Style="{StaticResource FieldBox}"
                                 md:HintAssist.Hint="{StaticResource LicenseNo}"
                                 Margin="0,0,0,12"/>

                                <!-- Status: driver found / not found -->
                                <TextBlock x:Name="DriverPhoneStatusText"
                                   Grid.Row="2" Grid.ColumnSpan="2"
                                   Margin="0,0,0,8"
                                   FontSize="11"
                                   Foreground="{DynamicResource MaterialDesignValidationErrorBrush}"
                                   Visibility="Collapsed"
                                   Text="Driver not found"/>
                            </Grid>

                            <!-- ===== Service info ===== -->
                            <Border Grid.Row="4" Grid.ColumnSpan="2"
                            BorderBrush="{DynamicResource MaterialDesignDivider}"
                            BorderThickness="0,1,0,0"
                            Padding="0,12,0,0"
                            Margin="0,8,0,6">
                                <TextBlock Text="{DynamicResource Service.Data}" Opacity="0.7"/>
                            </Border>

                            <ComboBox x:Name="ClienteRegCombo"
                              Grid.Row="5" Grid.ColumnSpan="2"
                              Margin="0,0,0,12"
                              MinHeight="44"
                              IsEditable="False"
                              IsTextSearchEnabled="True"
                              SelectionChanged="ClienteRegCombo_SelectionChanged"
                              md:HintAssist.Hint="Company" />

                            <TextBox x:Name="AccountNameText" IsReadOnly="True"
                             Grid.Row="6" Grid.ColumnSpan="2"
                             Style="{StaticResource FieldBox}"
                             md:HintAssist.Hint="{DynamicResource AccountName}"
                             Margin="0,0,0,12"/>

                            <TextBox x:Name="AccountAddressText"
                             Grid.Row="7" Grid.ColumnSpan="2"
                             Style="{StaticResource FieldBox}"
                             md:HintAssist.Hint="{DynamicResource AccountAddress}"
                             Margin="0,0,0,12"/>

                            <TextBox x:Name="AccountCountryText"
                             Grid.Row="8" Grid.Column="0"
                             Style="{StaticResource FieldBox}"
                             md:HintAssist.Hint="{DynamicResource AccountCountry}"
                             Margin="0,0,8,12"/>

                            <TextBox x:Name="AccountStateText"
                             Grid.Row="8" Grid.Column="1"
                             Style="{StaticResource FieldBox}"
                             md:HintAssist.Hint="{DynamicResource AccountState}"
                             Margin="8,0,0,12"/>

                            <!-- ===== Vehicle ===== -->
                            <Border Grid.Row="9" Grid.ColumnSpan="2"
                            BorderBrush="{DynamicResource MaterialDesignDivider}"
                            BorderThickness="0,1,0,0"
                            Padding="0,12,0,0"
                            Margin="0,8,0,6">
                                <TextBlock Text="{DynamicResource Unit.Section}"
                                   Opacity="0.7"/>
                            </Border>

                            <!-- Plates -->
                            <TextBox x:Name="PlacasRegText"
                             Grid.Row="10" Grid.ColumnSpan="2"
                             Style="{StaticResource FieldBox}"
                             md:HintAssist.Hint="{DynamicResource Plates}"
                             Margin="0,0,0,12"/>

                            <!-- License State (para placas) -->
                            <ComboBox x:Name="LicenseStateCombo"
                              Grid.Row="11" Grid.ColumnSpan="2"
                              md:HintAssist.Hint="{DynamicResource LicenseState}"
                              MinHeight="44"
                              Margin="0,0,0,12"
                              IsEditable="False"
                              IsTextSearchEnabled="True"/>

                            <!-- Trailer / Tractor -->
                            <Grid Grid.Row="12" Grid.ColumnSpan="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <TextBox x:Name="TrailerNumberText"
                                 Grid.Column="0"
                                 Style="{StaticResource FieldBox}"
                                 md:HintAssist.Hint="{DynamicResource TrailerNumber}"
                                 Margin="0,0,8,12"/>

                                <TextBox x:Name="TractorNumberText"
                                 Grid.Column="1"
                                 Style="{StaticResource FieldBox}"
                                 md:HintAssist.Hint="{DynamicResource TractorNumber}"
                                 Margin="8,0,0,12"/>
                            </Grid>

                            <!-- ===== Product ===== -->
                            <Border Grid.Row="13" Grid.ColumnSpan="2"
                            BorderBrush="{DynamicResource MaterialDesignDivider}"
                            BorderThickness="0,1,0,0"
                            Padding="0,12,0,0"
                            Margin="0,8,0,6">
                                <TextBlock Text="{DynamicResource Product}"
                                   Opacity="0.7"/>
                            </Border>

                            <ComboBox x:Name="ProductoRegText"
                              Grid.Row="14" Grid.ColumnSpan="2"
                              md:HintAssist.Hint="{DynamicResource Product}"
                              MinHeight="44"
                              Margin="0,0,0,0"
                              IsEditable="False"
                              IsTextSearchEnabled="True" />
                        </Grid>
                    </ScrollViewer>

                    <!-- ===== Footer fijo ===== -->
                    <Border Grid.Row="2"
                    BorderBrush="{DynamicResource MaterialDesignDivider}"
                    BorderThickness="0,1,0,0"
                    Padding="0,12,0,0"
                    Margin="0,16,0,0">
                        <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right">
                            <Button Content="{DynamicResource Cancel}"
                            Style="{StaticResource PrimaryOutlined}"
                            Margin="0,0,8,0"
                            Click="RegisterCancel_Click"/>
                            <Button Content="{DynamicResource Save}"
                            Style="{StaticResource PrimaryRaised}"
                            MinWidth="92"
                            Click="RegisterSave_Click"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </md:Card>
        </md:DialogHost.DialogContent>




    </md:DialogHost>
</Window>
