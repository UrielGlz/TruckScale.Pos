<Window x:Class="TruckScale.Pos.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="{DynamicResource App.Title}" Height="720" Width="1200"
        WindowStartupLocation="CenterScreen"
        UseLayoutRounding="True" SnapsToDevicePixels="True" 
        TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="Auto"
        Style="{StaticResource MaterialDesignWindow}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        Background="{DynamicResource MaterialDesignPaper}"
        Loaded="Window_Loaded">

    <!-- ====== RECURSOS DE ESTILO ====== -->
    <Window.Resources>
        <!-- Título grande -->
        <Style x:Key="TitleLarge" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <!-- TextBox alto y legible -->
        <Style x:Key="FieldBox" TargetType="{x:Type TextBox}"
               BasedOn="{StaticResource MaterialDesignOutlinedTextBox}">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="MinHeight" Value="44"/>
            <Setter Property="Padding" Value="12,10"/>
        </Style>

        <!-- Botones -->
        <Style x:Key="PrimaryRaised" TargetType="Button"
               BasedOn="{StaticResource MaterialDesignRaisedButton}">
            <Setter Property="MinHeight" Value="40"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style x:Key="PrimaryOutlined" TargetType="Button"
               BasedOn="{StaticResource MaterialDesignOutlinedButton}">
            <Setter Property="MinHeight" Value="40"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- Card MD3 -->
        <Style TargetType="{x:Type md:Card}">
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Background" Value="{DynamicResource MaterialDesignCardBackground}"/>
            <Setter Property="md:ElevationAssist.Elevation" Value="Dp2"/>
        </Style>

        <!-- Botón de tecla -->
        <Style x:Key="KeypadButton" TargetType="Button"
               BasedOn="{StaticResource MaterialDesignRaisedButton}">
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment"   Value="Stretch"/>
            <Setter Property="MinHeight" Value="56"/>
            <Setter Property="Margin"    Value="6"/>
            <Setter Property="FontSize"  Value="18"/>
        </Style>

        <!-- Botón de importe rápido -->
        <Style x:Key="QuickAmountButton" TargetType="Button"
               BasedOn="{StaticResource MaterialDesignOutlinedButton}">
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="MinHeight" Value="44"/>
            <Setter Property="Margin"    Value="6"/>
            <Setter Property="Padding"   Value="12,8"/>
            <Setter Property="FontSize"  Value="16"/>
        </Style>

        <!-- ===== KPI / Ledger helpers ===== -->
        <Style x:Key="AmountText" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="TextAlignment" Value="Right"/>
            <Setter Property="Typography.NumeralAlignment" Value="Tabular"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="LedgerLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Opacity" Value="0.75"/>
            <Setter Property="Margin" Value="0,2,0,2"/>
        </Style>

        <Style x:Key="LedgerValue" TargetType="TextBlock" BasedOn="{StaticResource AmountText}">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="12,2,0,2"/>
        </Style>

        <Style x:Key="KpiChip" TargetType="Border">
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="8,0,0,0"/>
            <Setter Property="BorderBrush" Value="{DynamicResource MaterialDesignDivider}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="{DynamicResource MaterialDesignCardBackground}"/>
        </Style>

        <Style x:Key="KpiCaption" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Opacity" Value="0.7"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>

        <!-- Form helpers -->
        <Style x:Key="FormGrid" TargetType="Grid"/>
        <Style x:Key="FormSection" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Opacity" Value="0.85"/>
            <Setter Property="Margin" Value="0,8,0,4"/>
        </Style>

        <!-- TextBox de diálogo -->
        <Style x:Key="FieldBoxPro" TargetType="{x:Type TextBox}" BasedOn="{StaticResource FieldBox}">
            <Setter Property="md:TextFieldAssist.HasClearButton" Value="True"/>
            <Setter Property="md:TextFieldAssist.DecorationVisibility" Value="Hidden"/>
        </Style>

        <!-- Card modal -->
        <Style x:Key="ModalCard" TargetType="{x:Type md:Card}">
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Width" Value="820"/>
            <Setter Property="md:ElevationAssist.Elevation" Value="Dp8"/>
        </Style>

        <!-- Botones modal -->
        <Style x:Key="DialogPrimaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryRaised}">
            <Setter Property="MinWidth" Value="96"/>
        </Style>
        <Style x:Key="DialogSecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryOutlined}">
            <Setter Property="MinWidth" Value="96"/>
        </Style>
        <SolidColorBrush x:Key="StartCtaBg"   Color="#2E7D32"/>
        <!-- green 800 -->
        <SolidColorBrush x:Key="StartCtaBgHv" Color="#1B5E20"/>
        <!-- green 900 -->
        <SolidColorBrush x:Key="StartCtaFg"   Color="#FFFFFF"/>
        <!-- Estilo del botón Start -->
        <Style x:Key="StartCTA" TargetType="Button" BasedOn="{StaticResource PrimaryRaised}">
            <Setter Property="Foreground" Value="{StaticResource StartCtaFg}"/>
            <Setter Property="Background" Value="{StaticResource StartCtaBg}"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="MinHeight" Value="48"/>
            <Setter Property="Padding" Value="22,12"/>
            <!-- Ojo: quitamos ShadowAssist.ShadowDepth -->
            <Setter Property="md:ButtonAssist.CornerRadius" Value="8"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource StartCtaBgHv}"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#184C1A"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.6"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="ProductOption" TargetType="ToggleButton" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
            <Setter Property="MinHeight" Value="64"/>
            <Setter Property="Padding"   Value="14,10"/>
            <Setter Property="Margin"    Value="0,8,12,0"/>
            <Setter Property="FontSize"  Value="16"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="md:ButtonAssist.CornerRadius" Value="10"/>
            <Setter Property="BorderBrush" Value="{DynamicResource MaterialDesignDivider}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Style.Triggers>
                <!-- Seleccionado -->
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background"  Value="{DynamicResource PrimaryHueMidBrush}"/>
                    <Setter Property="Foreground"  Value="{DynamicResource PrimaryHueMidForegroundBrush}"/>
                    <Setter Property="BorderBrush" Value="{DynamicResource PrimaryHueMidBrush}"/>
                </Trigger>
                <!-- Deshabilitado -->
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.6"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="PaymentButton" TargetType="Button" BasedOn="{StaticResource PrimaryOutlined}">
            <Setter Property="Margin" Value="6,0,0,0"/>
            <Style.Triggers>
                <!-- Cuando esté seleccionado, “parece” Raised cambiando colores -->
                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                    <Setter Property="Background" Value="{DynamicResource PrimaryHueMidBrush}"/>
                    <Setter Property="Foreground" Value="{DynamicResource PrimaryHueMidForegroundBrush}"/>
                    <Setter Property="BorderBrush" Value="{DynamicResource PrimaryHueMidBrush}"/>
                    <!-- Quitar cualquier md:ShadowAssist.ShadowDepth -->
                </DataTrigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.6"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>

    <md:DialogHost x:Name="RootDialog">
        <md:DrawerHost x:Name="RootDrawerHost">

            <!-- ===== Menú lateral ===== -->
            <md:DrawerHost.LeftDrawerContent>
                <StackPanel Margin="12" Width="240">
                    <TextBlock Text="{DynamicResource Menu.Title}" FontWeight="Bold" Margin="0,0,0,12"/>
                    <Button Style="{StaticResource MaterialDesignOutlinedButton}" Content="{DynamicResource Menu.NewTicket}" Margin="0,0,0,8"/>
                    <Button Style="{StaticResource MaterialDesignOutlinedButton}" Content="{DynamicResource Menu.ScaleMonitor}" Margin="0,0,0,8"/>
                    <Button Style="{StaticResource MaterialDesignOutlinedButton}" Content="{DynamicResource Menu.Tickets}"/>
                </StackPanel>
            </md:DrawerHost.LeftDrawerContent>

            <!-- ===== CONTENIDO ===== -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="47"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="73*"/>
                    <ColumnDefinition Width="1127*"/>
                </Grid.ColumnDefinitions>
                <!-- Top bar -->
                <md:ColorZone Mode="Standard" Padding="12" Height="56"
                              Background="{DynamicResource MaterialDesignPaper}" Grid.ColumnSpan="2" Grid.RowSpan="2">
                    <DockPanel LastChildFill="True">
                        <Button Content="☰" Width="40" Height="32" Margin="0,0,8,0" Click="ToggleDrawer_Click"/>
                        <TextBlock Text="{DynamicResource App.Title}" FontSize="18" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                            <Button Content="{DynamicResource Theme.Toggle}" Click="ToggleTheme_Click" Margin="8,0"/>
                        </StackPanel>
                    </DockPanel>
                </md:ColorZone>

                <!-- Layout principal -->
                <Grid Margin="16,25,16,32" Grid.ColumnSpan="2" Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="320"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="320"/>
                    </Grid.ColumnDefinitions>

                    <!-- ===== COLUMNA IZQUIERDA ===== -->
                    <Grid Grid.Column="0" Margin="0,0,16,0" RenderTransformOrigin="0.509,0.562">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto" MinHeight="491"/>
                            <RowDefinition Height="Auto" MinHeight="61"/>
                        </Grid.RowDefinitions>

                        <!-- MONITOR -->
                        <md:Card Grid.Row="0" Grid.RowSpan="2" Margin="0,0,0,58">
                            <StackPanel Margin="0,-2,0,2">
                                <TextBlock Text="{DynamicResource LiveWeight}" Style="{StaticResource TitleLarge}"/>
                                <Border Margin="0,8,0,12" Padding="12" CornerRadius="10"
                                        Background="{DynamicResource MaterialDesignCardBackground}" Height="125">
                                    <Viewbox Stretch="Uniform" StretchDirection="DownOnly" MaxHeight="120" Margin="0,0,0,20">
                                        <TextBlock x:Name="WeightText"
                                                   Text="0.0 kg"
                                                   FontSize="72"
                                                   FontWeight="SemiBold"
                                                   HorizontalAlignment="Center"/>
                                    </Viewbox>
                                </Border>
                                <Grid Margin="0,8,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Button Grid.Column="0" Style="{StaticResource StartCTA}" Click="Start_Click">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <md:PackIcon Kind="PlayCircle" Width="18" Height="18" Margin="0,0,8,0"/>
                                            <TextBlock Text="{DynamicResource Start}"/>
                                        </StackPanel>
                                    </Button>

                                    <Button Grid.Column="1" Style="{StaticResource PrimaryOutlined}" Content="{DynamicResource Zero}" Margin="8,0,0,0" Click="Zero_Click"/>
                                </Grid>


                                <!-- Ejes por sesión (se congela hasta próximo camión) -->
                                <StackPanel Margin="0,12,0,0">
                                    <TextBlock Text="Ejes por sesión" Style="{StaticResource TitleLarge}" />
                                    <ListBox x:Name="AxlesList" Height="7" ItemsSource="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=_currentAxles}" />
                                </StackPanel>
                                <Label x:Name="lblEje1" Content="Label" Height="42" Width="237" FontSize="24"/>
                                <Label x:Name="lblEje2" Content="Label" Height="42" Width="237" FontSize="24"/>
                                <Label x:Name="lblEje3" Content="Label" Height="42" Width="237" FontSize="24"/>
                                <Label x:Name="lblUUID" Content="Label2" Height="42" Width="237" FontSize="24"/>
                                <!--<Label x:Name="lblTemp" Content="Label2" Height="42" Width="237" FontSize="24"/>-->

                            </StackPanel>
                        </md:Card>
                        
                        <!-- STATUS CARD -->
                        <md:Card Grid.Row="2" x:Name="StatusCard" Padding="40" Margin="0,8,0,0">

                            <md:Card.Resources>
                                <!-- Idle / Waiting -->
                                <SolidColorBrush x:Key="StIdleBg" Color="#ECEFF1"/>
                                <!-- blue-grey 50 -->
                                <SolidColorBrush x:Key="StIdleBr" Color="#90A4AE"/>
                                <!-- blue-grey 300 -->
                                <SolidColorBrush x:Key="StIdleFg" Color="#37474F"/>
                                <!-- blue-grey 800 -->

                                <!-- Connected / Connecting / Error (ya las tienes) -->
                                <SolidColorBrush x:Key="StConnectedBg" Color="#E8F5E9"/>
                                <SolidColorBrush x:Key="StConnectedBr" Color="#2E7D32"/>
                                <SolidColorBrush x:Key="StConnectedFg" Color="#1B5E20"/>

                                <SolidColorBrush x:Key="StConnectingBg" Color="#FFF8E1"/>
                                <SolidColorBrush x:Key="StConnectingBr" Color="#F9A825"/>
                                <SolidColorBrush x:Key="StConnectingFg" Color="#5D4037"/>

                                <SolidColorBrush x:Key="StErrorBg" Color="#FFEBEE"/>
                                <SolidColorBrush x:Key="StErrorBr" Color="#C62828"/>
                                <SolidColorBrush x:Key="StErrorFg" Color="#B71C1C"/>


                               
                            </md:Card.Resources>

                            <!-- Estilo del card con disparadores por estado -->
                            <md:Card.Style>
                                <Style TargetType="{x:Type md:Card}">
                                    <Setter Property="Background" Value="{DynamicResource MaterialDesignCardBackground}"/>
                                    <Setter Property="BorderBrush" Value="{DynamicResource MaterialDesignDivider}"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                    <Setter Property="md:ElevationAssist.Elevation" Value="Dp2"/>

                                    <Style.Triggers>
                                        <!-- Waiting -->
                                        <DataTrigger Binding="{Binding ElementName=lblTemp, Path=Content}" Value="Waiting">
                                            <Setter Property="Background"  Value="{StaticResource StIdleBg}"/>
                                            <Setter Property="BorderBrush" Value="{StaticResource StIdleBr}"/>
                                        </DataTrigger>

                                        <!-- Connected -->
                                        <DataTrigger Binding="{Binding ElementName=lblTemp, Path=Content}" Value="Connected">
                                            <Setter Property="Background"  Value="{StaticResource StConnectedBg}"/>
                                            <Setter Property="BorderBrush" Value="{StaticResource StConnectedBr}"/>
                                        </DataTrigger>

                                        <!-- Connecting -->
                                        <DataTrigger Binding="{Binding ElementName=lblTemp, Path=Content}" Value="Connecting">
                                            <Setter Property="Background"  Value="{StaticResource StConnectingBg}"/>
                                            <Setter Property="BorderBrush" Value="{StaticResource StConnectingBr}"/>
                                        </DataTrigger>

                                        <!-- Error -->
                                        <DataTrigger Binding="{Binding ElementName=lblTemp, Path=Content}" Value="Error">
                                            <Setter Property="Background"  Value="{StaticResource StErrorBg}"/>
                                            <Setter Property="BorderBrush" Value="{StaticResource StErrorBr}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </md:Card.Style>

                            <!-- Contenido: SOLO el label del estado -->
                            <Label x:Name="lblTemp"  Grid.Row="0" Content="Waiting"   HorizontalContentAlignment="Center" FontSize="24" FontWeight="SemiBold">
                                <Label.Style>
                                    <Style TargetType="Label">
                                        <Setter Property="Foreground" Value="{DynamicResource Foreground}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Content, RelativeSource={RelativeSource Self}}" Value="Waiting">
                                                <Setter Property="Foreground" Value="{StaticResource StIdleFg}"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Content, RelativeSource={RelativeSource Self}}" Value="Connected">
                                                <Setter Property="Foreground" Value="{StaticResource StConnectedFg}"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Content, RelativeSource={RelativeSource Self}}" Value="Connecting">
                                                <Setter Property="Foreground" Value="{StaticResource StConnectingFg}"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Content, RelativeSource={RelativeSource Self}}" Value="Error">
                                                <Setter Property="Foreground" Value="{StaticResource StErrorFg}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Label.Style>
                            </Label>
                        </md:Card>

                        <Label x:Name="lblEstado" Content="Label" HorizontalAlignment="Center" Margin="0,466,0,0"  Opacity="0.7" FontStyle="Italic" Grid.Row="1" VerticalAlignment="Top" RenderTransformOrigin="0.662,2.549" Height="88" Grid.RowSpan="2" Width="284"/>
                        <!--<TextBlock x:Name="lblEstado" Margin="0,6,0,0" Opacity="0.7" FontStyle="Italic"    Text="Press Start to begin."/>-->

                    </Grid>

                    <!-- ===== COLUMNA CENTRAL ===== -->
                    <Grid Grid.Column="1" x:Name="MidCol" Margin="0,0,16,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- CARD 1: RESUMEN (KPI + Lista) -->
                        <md:Card Grid.Row="0" Margin="0,0,0,16">
                            <Grid>
                                <!-- 5 columnas: Ledger | SEP | Lista | SEP | KPIs -->
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <!-- 0: Ledger -->
                                    <ColumnDefinition Width="12"/>
                                    <!-- 1: separador -->
                                    <ColumnDefinition Width="3*"/>
                                    <!-- 2: Lista -->
                                    <ColumnDefinition Width="12"/>
                                    <!-- 3: separador -->
                                    <ColumnDefinition Width="Auto"/>
                                    <!-- 4: KPIs -->
                                </Grid.ColumnDefinitions>

                                <!-- ===== Ledger (izquierda) ===== -->
                                <!-- ===== Ledger (izquierda) ===== -->
                                <StackPanel Grid.Column="0">
                                    <!-- Encabezado -->
                                    <TextBlock Text="Order total" Style="{StaticResource TitleLarge}" Margin="0,0,0,6"/>

                                    <!-- KPI GRANDE: Monto total (sin Viewbox) -->
                                    <Border CornerRadius="12" Padding="16" Margin="0,0,12,12" Background="{DynamicResource MaterialDesignCardBackground}" BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="1" SnapsToDevicePixels="True">
                                        <TextBlock x:Name="TotalVentaBigText" Text="$0.00" HorizontalAlignment="Stretch" TextAlignment="Center" FontSize="42" FontWeight="SemiBold" TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType" TextOptions.TextHintingMode="Fixed" Typography.NumeralAlignment="Tabular" Typography.NumeralStyle="Lining"/>
                                    </Border>
                                </StackPanel>


                                <!-- Separador 1 -->
                                <Border Grid.Column="1" Background="{DynamicResource MaterialDesignDivider}"/>

                                <!-- ===== Pagos recibidos (centro) ===== -->
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="{DynamicResource Payment.Received}" Style="{StaticResource TitleLarge}" Margin="0,0,0,6"/>

                                    <Grid>
                                        <!-- Lista -->
                                        <ItemsControl x:Name="PagosList">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <StackPanel/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <DockPanel Margin="0,4,0,4">
                                                        <TextBlock Text="{Binding Metodo}" />
                                                        <TextBlock Text="{Binding Monto, StringFormat={}{0:C}}"
                                                                   DockPanel.Dock="Right"
                                                                   Style="{StaticResource AmountText}"/>
                                                    </DockPanel>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>

                                        <!-- Placeholder cuando NO hay items -->
                                        <TextBlock x:Name="PagosEmpty"
                                                   Text="{DynamicResource Payment.Empty}"
                                                   Opacity="0.6" Margin="0,4,0,0" Visibility="Collapsed">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding HasItems, ElementName=PagosList}" Value="False">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Grid>
                                </StackPanel>

                                <!-- Separador 2 -->
                                <Border Grid.Column="3" Background="{DynamicResource MaterialDesignDivider}"/>

                                <!-- ===== Chips KPI (derecha) ===== -->
                                <StackPanel Grid.Column="4" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top">
                                    <Border Style="{StaticResource KpiChip}">
                                        <StackPanel>
                                            <TextBlock  Text="{DynamicResource Payment.ReceivedKpi}" Style="{StaticResource KpiCaption}"/>
                                            <TextBlock x:Name="PagoRecibidoText"
                                                       Style="{StaticResource AmountText}"
                                                       Foreground="{DynamicResource PrimaryHueMidBrush}"
                                                       FontSize="20" Text="0.00"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Style="{StaticResource KpiChip}">
                                        <StackPanel>
                                            <TextBlock x:Name="BalanceCaption"  Text="{DynamicResource Payment.BalanceKpi}" Style="{StaticResource KpiCaption}"/>
                                            <TextBlock x:Name="BalanceText"
                                                       Style="{StaticResource AmountText}"
                                                       Foreground="{DynamicResource MaterialDesignValidationErrorBrush}"
                                                       FontSize="20" Text="0.00"/>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </Grid>
                        </md:Card>

                        <!-- CARD 2: TECLADO + DENOMINACIONES -->
                        <md:Card Grid.Row="1" Margin="0,0,0,16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="260"/>
                                    <ColumnDefinition Width="12"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" BorderBrush="{DynamicResource MaterialDesignDivider}"
        BorderThickness="0,0,1,0" Padding="0,0,12,0">
                                    <!-- Estilos locales SOLO para esta columna -->
                                    <Border.Resources>
                                        <!-- Toggle tipo card -->
                                        <Style x:Key="ProductOption" TargetType="ToggleButton"
               BasedOn="{StaticResource MaterialDesignOutlinedButton}">
                                            <Setter Property="MinHeight" Value="64"/>
                                            <Setter Property="Padding"   Value="14,10"/>
                                            <Setter Property="Margin"    Value="0,0,12,8"/>
                                            <Setter Property="FontSize"  Value="16"/>
                                            <Setter Property="HorizontalAlignment" Value="Stretch"/>
                                            <Setter Property="md:ButtonAssist.CornerRadius" Value="10"/>
                                            <Setter Property="BorderBrush" Value="{DynamicResource MaterialDesignDivider}"/>
                                            <Setter Property="BorderThickness" Value="1"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsChecked" Value="True">
                                                    <Setter Property="Background"  Value="{DynamicResource PrimaryHueMidBrush}"/>
                                                    <Setter Property="Foreground"  Value="{DynamicResource PrimaryHueMidForegroundBrush}"/>
                                                    <Setter Property="BorderBrush" Value="{DynamicResource PrimaryHueMidBrush}"/>
                                                </Trigger>
                                                <Trigger Property="IsEnabled" Value="False">
                                                    <Setter Property="Opacity" Value="0.6"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Resources>

                                    <StackPanel>
                                        
                                        <!-- === NUEVO: selección de servicio (side-by-side) === -->
                                        <TextBlock Text="Service" Style="{StaticResource TitleLarge}" Margin="0,0,0,6"/>

                                        <Grid Margin="0,0,0,10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <!-- Weigh -->
                                            <ToggleButton x:Name="WeighToggle" Grid.Column="0" Style="{StaticResource ProductOption}"  Margin="0,0,8,0" Checked="WeighToggle_Checked">
                                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                    <md:PackIcon Kind="Scale" Width="20" Height="20" Margin="0,0,10,0"/>
                                                    <TextBlock Text="Weigh" FontWeight="SemiBold"/>
                                                </StackPanel>
                                            </ToggleButton>

                                            <!-- Reweigh -->
                                            <ToggleButton x:Name="ReweighToggle" Grid.Column="1" Style="{StaticResource ProductOption}" Margin="8,0,0,0" Checked="ReweighToggle_Checked">
                                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                    <md:PackIcon Kind="History" Width="20" Height="20" Margin="0,0,2,0"/>
                                                    <TextBlock Text="Reweigh" FontWeight="SemiBold"/>
                                                </StackPanel>
                                            </ToggleButton>
                                        </Grid>


                                        <Separator Margin="0,8,0,8"/>

                                        <!-- === EXISTENTE: Denominations === -->
                                        <TextBlock Text="{DynamicResource Denominations}" Margin="0,0,0,6" Opacity="0.7"/>
                                        <ItemsControl x:Name="DenomsHost">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <UniformGrid Columns="2"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Button Style="{StaticResource QuickAmountButton}" Content="{Binding}" Tag="{Binding}" Click="Denom_Click"/>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </Border>


                                <Grid Grid.Column="2">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBox x:Name="KeypadDisplay"
                                             Style="{StaticResource FieldBox}"
                                             Grid.Row="0"
                                             Margin="0,0,0,8"
                                             MinHeight="52"
                                             FontSize="22"
                                             HorizontalContentAlignment="Right"
                                             Text="{Binding KeypadText, RelativeSource={RelativeSource AncestorType=Window}, Mode=OneWay}" />

                                    <!-- TECLAS -->
                                    <ItemsControl x:Name="KeysItems" Grid.Row="1">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <UniformGrid Columns="3" Rows="4"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Button Style="{StaticResource KeypadButton}" Content="{Binding}" Click="Key_Click"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,8,0,0">
                                        <Button Style="{StaticResource PrimaryOutlined}" Content="{DynamicResource Keypad.Clear}" Click="KeypadClear_Click" Margin="0,0,8,0"/>
                                        <Button Style="{StaticResource PrimaryRaised}"  Content="{DynamicResource Keypad.Add}"    Click="KeypadCommit_Click"/>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </md:Card>

                        <!-- CARD 3: MÉTODOS DE PAGO -->
                        <md:Card Grid.Row="2">
                            <StackPanel>
                                <TextBlock Text="{DynamicResource Payment.MethodTitle}" Style="{StaticResource TitleLarge}" Margin="0,0,0,8"/>
                                <!-- Lista dinámica de métodos de pago -->
                                <ItemsControl x:Name="PaymentMethodsItems" ItemsSource="{Binding PaymentMethods, RelativeSource={RelativeSource AncestorType=Window}}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel HorizontalAlignment="Right"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <!-- Estilo con selección visual -->
                                            <Button Click="PaymentMethod_Click" Style="{StaticResource PaymentButton}">
                                                <StackPanel Orientation="Horizontal">
                                                    <md:PackIcon Kind="{Binding IconKind}" Width="18" Height="18" Margin="0,0,8,0"/>
                                                    <TextBlock Text="{Binding Name}"/>
                                                </StackPanel>
                                            </Button>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <!-- Referencia (se muestra sólo si el método lo permite) -->
                                <StackPanel x:Name="RefPanel" Margin="0,12,0,0" Visibility="Collapsed">
                                    <TextBlock Text="{DynamicResource Reference}" Opacity="0.7"/>
                                    <TextBox x:Name="RefText" Style="{StaticResource FieldBox}" />
                                </StackPanel>
                            </StackPanel>
                        </md:Card>
                    </Grid>

                    <!-- ===== COLUMNA DERECHA ===== -->
                    <StackPanel Grid.Column="2" x:Name="RightCol">
                        <md:Card Padding="20" Margin="0,0,0,16">
                            <StackPanel>
                                <TextBlock Text="{DynamicResource QuickActions}" FontWeight="SemiBold"/>
                                <Button Style="{StaticResource PrimaryRaised}" Content="{DynamicResource Driver.Register}" Margin="0,12,0,8" Click="RegisterDriver_Click"/>
                                <Button Style="{StaticResource PrimaryRaised}" Content="{DynamicResource Ticket.New}" Margin="0,12,0,0" Click="Button_Click"/>
                                <Button Style="{StaticResource PrimaryOutlined}" Content="{DynamicResource Reprint}"/>
                                <Button Style="{StaticResource PrimaryOutlined}" Content="{DynamicResource Search}"/>
                            </StackPanel>
                        </md:Card>

                        <!-- ===== DRIVER SUMMARY ===== -->
                        <md:Card x:Name="DriverCard" Padding="16" Margin="0,0,0,16" Visibility="Collapsed">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,8">
                                    <md:PackIcon Kind="AccountTie" Width="20" Height="20" Opacity="0.85" Margin="0,0,8,0"/>
                                    <TextBlock Text="Driver summary" FontWeight="SemiBold" FontSize="14"/>
                                </StackPanel>

                                <!-- Nombre -->
                                <TextBlock x:Name="DriverNameText" Text="—" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,4"/>

                                <!-- Placas / Licencia -->
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                                    <md:PackIcon Kind="License" Width="16" Height="16" Opacity="0.75" Margin="0,0,6,0"/>
                                    <TextBlock x:Name="DriverLicenseText" Text="—" Opacity="0.85"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                                    <md:PackIcon Kind="Car" Width="16" Height="16" Opacity="0.75" Margin="0,0,6,0"/>
                                    <TextBlock x:Name="DriverPlatesText" Text="—" Opacity="0.85"/>
                                </StackPanel>

                                <!-- Teléfono / Unidad -->
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                                    <md:PackIcon Kind="Phone" Width="16" Height="16" Opacity="0.75" Margin="0,0,6,0"/>
                                    <TextBlock x:Name="DriverPhoneText" Text="—" Opacity="0.85"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                                    <md:PackIcon Kind="Truck" Width="16" Height="16" Opacity="0.75" Margin="0,0,6,0"/>
                                    <TextBlock x:Name="DriverVehicleText" Text="—" Opacity="0.85"/>
                                </StackPanel>
                            </StackPanel>
                        </md:Card>

                        <TextBox x:Name="txtLogTemp" TextWrapping="Wrap" Text="TextBox" Width="304" Height="309"
                                 VerticalScrollBarVisibility="Auto"
                                 />

                    </StackPanel>
                    <!-- BLOQUEO UI (cubre columnas 1 y 2) -->
                    <Grid Grid.Column="1" Grid.ColumnSpan="2" x:Name="UiBlocker" Visibility="Visible" IsHitTestVisible="True">
                        <Border CornerRadius="12" Background="#80FFFFFF" BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="1">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <md:PackIcon Kind="Lock" Width="28" Height="28" Opacity="0.7" Margin="0,0,0,6"/>
                                <TextBlock Text="{Binding ElementName=lblTemp, Path=Content}" FontSize="18" FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0,0,0,4"/>
                                <TextBlock Text="Press Start to enable" Opacity="0.7" HorizontalAlignment="Center"/>                            </StackPanel>
                        </Border>
                    </Grid>


                </Grid>

                <!-- Barra de estado -->
                <DockPanel Height="28" VerticalAlignment="Bottom" Margin="8,0" Opacity="0.8" Grid.ColumnSpan="2" Grid.Row="1">
                    <TextBlock x:Name="ScaleStateText" Text="{DynamicResource Scale.Simulated}"/>
                    <TextBlock Text="   |   " />
                    <TextBlock>
                        <Run Text="{DynamicResource Operator}"/>
                        <Run Text=": admin"/>
                    </TextBlock>
                    <TextBlock Text="   |   " />
                    <TextBlock Text="{Binding ElementName=WeightText, Path=Text}" />
                </DockPanel>

                <!-- === SALE COMPLETED DIALOG === -->
                <md:DialogHost x:Name="SaleCompletedHost" Grid.RowSpan="99" Grid.ColumnSpan="99"  Panel.ZIndex="100">
                    <md:DialogHost.DialogContent>
                        <Grid Width="520" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <md:Card Padding="18" md:ElevationAssist.Elevation="Dp3" UniformCornerRadius="16">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Header -->
                                    <StackPanel Orientation="Horizontal">
                                        <md:PackIcon Kind="CheckCircle" Width="28" Height="28"
                         Foreground="{DynamicResource PrimaryHueMidBrush}"
                         Margin="0,0,8,0"/>
                                        <TextBlock Text="Sale completed" FontSize="20" FontWeight="SemiBold"/>
                                    </StackPanel>

                                    <!-- KPI row -->
                                    <Grid Grid.Row="1" Margin="0,14,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                            <TextBlock Text="Total" Opacity=".7"/>
                                            <TextBlock x:Name="DlgSaleTotal" FontSize="20" FontWeight="Bold"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                            <TextBlock Text="Received" Opacity=".7"/>
                                            <TextBlock x:Name="DlgSaleReceived" FontSize="20" FontWeight="Bold"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                            <TextBlock Text="Change" Opacity=".7"/>
                                            <TextBlock x:Name="DlgSaleChange" FontSize="20" FontWeight="Bold"
                         Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                        </StackPanel>
                                    </Grid>

                                    <!-- Ticket + spinner -->
                                    <StackPanel Grid.Row="2" Margin="0,16,0,0" Orientation="Horizontal" VerticalAlignment="Center">
                                        <md:PackIcon Kind="ReceiptText" Width="22" Height="22" Margin="0,0,8,0"/>
                                        <TextBlock Text="Printing ticket…" VerticalAlignment="Center"/>
                                        <ProgressBar x:Name="DlgTicketProgress" IsIndeterminate="True" Width="140" Height="4" Margin="10,0,0,0"/>
                                    </StackPanel>

                                    <!-- Footer -->
                                    <DockPanel Grid.Row="3" Margin="0,18,0,0">
                                        <TextBlock x:Name="DlgSaleUid" DockPanel.Dock="Left" Opacity=".7" TextWrapping="Wrap"/>
                                        <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                                            <Button x:Name="DlgReprintBtn" Content="Reprint"
                      Style="{StaticResource MaterialDesignOutlinedButton}" Margin="0,0,8,0"/>
                                            <Button x:Name="DlgCloseBtn" Content="Close" IsDefault="True"/>
                                        </StackPanel>
                                    </DockPanel>
                                </Grid>
                            </md:Card>
                        </Grid>
                    </md:DialogHost.DialogContent>
                </md:DialogHost>


                <!-- === DRIVER SAVED DIALOG === -->
                <md:DialogHost x:Name="DriverSavedHost" Grid.RowSpan="99" Grid.ColumnSpan="99" Panel.ZIndex="100">
                    <md:DialogHost.DialogContent>
                        <Grid Width="480" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <md:Card Padding="18" md:ElevationAssist.Elevation="Dp2" UniformCornerRadius="16">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <md:PackIcon Kind="BadgeAccount" Width="26" Height="26"  Foreground="{DynamicResource PrimaryHueMidBrush}"  Margin="0,0,8,0"/>
                                        <TextBlock Text="Driver saved" FontSize="20" FontWeight="SemiBold"/>
                                    </StackPanel>

                                    <StackPanel Margin="0,10,0,0">
                                        <TextBlock x:Name="DlgDrvName"  FontSize="16" FontWeight="SemiBold"/>
                                        <TextBlock x:Name="DlgDrvExtra" Opacity=".8"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                                        <Button x:Name="DlgDrvOkBtn" Content="OK" IsDefault="True"/>
                                    </StackPanel>
                                </StackPanel>
                            </md:Card>
                        </Grid>
                    </md:DialogHost.DialogContent>
                </md:DialogHost>


            </Grid>
            
        </md:DrawerHost>

        <!-- ===== MODAL: Registrar chofer ===== -->
        <md:DialogHost.DialogContent>
            <md:Card Padding="24" Width="760">
                <StackPanel>
                    <!-- Encabezado -->
                    <Border Padding="0,0,0,12" BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="0,0,0,1">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <md:PackIcon Kind="Steering" Width="20" Height="20" Opacity="0.85" Margin="0,0,8,0"/>
                            <TextBlock Text="{DynamicResource Driver.Dialog.Title}" Style="{StaticResource TitleLarge}" />
                        </StackPanel>
                    </Border>

                    <Grid Margin="0,8,0,0">
                        <!-- 2 columnas -->
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <!-- Filas -->
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <!-- 0: título Datos del servicio -->
                            <RowDefinition Height="Auto"/>
                            <!-- 1: cliente/producto -->
                            <RowDefinition Height="Auto"/>
                            <!-- 2: título Chofer -->
                            <RowDefinition Height="Auto"/>
                            <!-- 3: nombre/apellidos -->
                            <RowDefinition Height="Auto"/>
                            <!-- 4: teléfono/licencia -->
                            <RowDefinition Height="Auto"/>
                            <!-- 5: vigencia -->
                            <RowDefinition Height="Auto"/>
                            <!-- 6: título Unidad -->
                            <RowDefinition Height="Auto"/>
                            <!-- 7: placas/tipo -->
                            <RowDefinition Height="Auto"/>
                            <!-- 8: marca/modelo -->
                            <RowDefinition Height="Auto"/>
                            <!-- 9: observaciones -->
                        </Grid.RowDefinitions>

                        <!-- Datos del servicio -->
                        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="{DynamicResource Service.Data}" Opacity="0.7" Margin="0,0,0,4"/>
                        <ComboBox x:Name="ClienteRegCombo" Grid.Row="1" Grid.Column="0"
                                  md:HintAssist.Hint="{DynamicResource Client}" MinHeight="44"
                                  Margin="0,0,8,12" IsEditable="False" IsTextSearchEnabled="True">
                            <!-- demo items -->
                            <ComboBoxItem Content="Transportes Acme S.A."/>
                            <ComboBoxItem Content="Logística del Norte"/>
                            <ComboBoxItem Content="Fletes y Mudanzas MX"/>
                            <ComboBoxItem Content="Minería San Jorge"/>
                        </ComboBox>

                        <TextBox x:Name="ProductoRegText" Grid.Row="1" Grid.Column="1"
                                 Style="{StaticResource FieldBox}" md:HintAssist.Hint="{DynamicResource Product}"
                                 Margin="8,0,0,12"/>

                        <!-- Chofer -->
                        <Border Grid.Row="2" Grid.ColumnSpan="2" BorderBrush="{DynamicResource MaterialDesignDivider}"
                                BorderThickness="0,1,0,0" Padding="0,12,0,0" Margin="0,8,0,6">
                            <TextBlock Text="{DynamicResource Driver.Section}" Opacity="0.7"/>
                        </Border>

                        <Grid Grid.Row="3" Grid.ColumnSpan="2" Margin="0,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="ChoferNombreText" Grid.Column="0"
                                     Style="{StaticResource FieldBox}" md:HintAssist.Hint="{DynamicResource FirstName}"
                                     Margin="0,0,8,12"/>
                            <TextBox x:Name="ChoferApellidosText" Grid.Column="1"
                                     Style="{StaticResource FieldBox}" md:HintAssist.Hint="{DynamicResource LastName}"
                                     Margin="8,0,0,12"/>
                        </Grid>

                        <Grid Grid.Row="4" Grid.ColumnSpan="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="ChoferTelefonoText" Grid.Column="0" Style="{StaticResource FieldBox}" md:HintAssist.Hint="{DynamicResource Phone}" Margin="0,0,8,12" MaxLength="10" PreviewTextInput="DigitsOnly_PreviewTextInput" DataObject.Pasting="DigitsOnly_Pasting"/>

                            <TextBox x:Name="LicenciaNumeroText" Grid.Column="1" Style="{StaticResource FieldBox}" md:HintAssist.Hint="{DynamicResource LicenseNo}" Margin="8,0,0,12"/>
                        </Grid>

                        <DatePicker x:Name="LicenciaVigenciaPicker" Grid.Row="5" Grid.ColumnSpan="2"
                                    Margin="0,0,0,12" md:HintAssist.Hint="{DynamicResource LicenseExpiry}"
                                    MinHeight="44"/>

                        <!-- Unidad -->
                        <Border Grid.Row="6" Grid.ColumnSpan="2" BorderBrush="{DynamicResource MaterialDesignDivider}"
                                BorderThickness="0,1,0,0" Padding="0,12,0,0" Margin="0,8,0,6">
                            <TextBlock Text="{DynamicResource Unit.Section}" Opacity="0.7"/>
                        </Border>

                        <Grid Grid.Row="7" Grid.ColumnSpan="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="PlacasRegText" Grid.Column="0"
                                     Style="{StaticResource FieldBox}" md:HintAssist.Hint="{DynamicResource Plates}"
                                     Margin="0,0,8,12"/>
                            <ComboBox x:Name="TipoUnidadCombo" Grid.Column="1" md:HintAssist.Hint="{DynamicResource UnitType}" MinHeight="44" Margin="8,0,0,12"/>
                        </Grid>

                        <Grid Grid.Row="8" Grid.ColumnSpan="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="MarcaText" Grid.Column="0"
                                     Style="{StaticResource FieldBox}" md:HintAssist.Hint="{DynamicResource Brand}"
                                     Margin="0,0,8,12"/>
                            <TextBox x:Name="ModeloText" Grid.Column="1"
                                     Style="{StaticResource FieldBox}" md:HintAssist.Hint="{DynamicResource Model}"
                                     Margin="8,0,0,12"/>
                        </Grid>

                        <TextBox x:Name="ObsText" Grid.Row="9" Grid.ColumnSpan="2"
                                 Style="{StaticResource FieldBox}" md:HintAssist.Hint="{DynamicResource Notes}"
                                 AcceptsReturn="True" Height="80"/>
                    </Grid>

                    <!-- Acciones -->
                    <Border BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="0,1,0,0" Padding="0,12,0,0" Margin="0,16,0,0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Content="{DynamicResource Cancel}" Style="{StaticResource PrimaryOutlined}" Margin="0,0,8,0" Click="RegisterCancel_Click"/>
                            <Button Content="{DynamicResource Save}"    Style="{StaticResource PrimaryRaised}" Click="RegisterSave_Click" MinWidth="92"/>
                        </StackPanel>
                        
                    </Border>
                    
                </StackPanel>
            </md:Card>
        </md:DialogHost.DialogContent>

    </md:DialogHost>
</Window>
