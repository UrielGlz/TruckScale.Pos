<Window x:Class="TruckScale.Pos.SerialConsoleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Serial Console - TruckScale" Height="520" Width="760"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Controles superiores -->
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Puerto:" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <ComboBox x:Name="PortCombo" Width="120" Margin="0,0,12,0"/>

            <TextBlock Text="Baud:" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <ComboBox x:Name="BaudCombo" Width="120" Margin="0,0,12,0"/>

            <Button x:Name="RefreshBtn" Content="Refrescar" Width="90" Margin="0,0,6,0" Click="RefreshBtn_Click"/>
            <Button x:Name="ConnectBtn" Content="Conectar" Width="90" Margin="0,0,6,0" Click="ConnectBtn_Click"/>
            <Button x:Name="DisconnectBtn" Content="Desconectar" Width="110" Margin="0,0,6,0" Click="DisconnectBtn_Click" IsEnabled="False"/>
            <Button x:Name="ClearBtn" Content="Limpiar" Width="80" Click="ClearBtn_Click"/>
        </StackPanel>

        <!-- Log -->
        <TextBox x:Name="LogBox" Grid.Row="1"
                 FontFamily="Consolas" FontSize="13"
                 IsReadOnly="True" AcceptsReturn="True" TextWrapping="NoWrap"
                 VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" />

        <!-- Barra de estado -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" Text="Desconectado" />
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock x:Name="PortInfoText" Text="-" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
