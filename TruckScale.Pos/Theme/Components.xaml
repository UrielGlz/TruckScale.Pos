<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Theme/Colors.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!-- Botón primario -->
    <Style x:Key="PrimaryButton" TargetType="Button">
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Background" Value="{StaticResource Brush.Secondary}"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>

    <!-- Botón outlined -->
    <Style x:Key="OutlinedButton" TargetType="Button">
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="{StaticResource Brush.Border}"/>
        <Setter Property="Foreground" Value="{StaticResource Brush.TextPrimary}"/>
    </Style>

    <!-- Card -->
    <Style TargetType="{x:Type md:Card}">
        <Setter Property="Padding" Value="24"/>
        <Setter Property="Margin"  Value="0"/>
        <Setter Property="Background" Value="{StaticResource Brush.Card}"/>
    </Style>
</ResourceDictionary>
